@page
@model AutoEscola.Pages.Funcionarios.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h2>Cadastro Funcionarios</h2>

    <p>
        <a asp-page="Create">Novo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Funcionario[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Funcionario[0].CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Funcionario[0].Cargo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Funcionario[0].Salario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Funcionario)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Delatlhes</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
