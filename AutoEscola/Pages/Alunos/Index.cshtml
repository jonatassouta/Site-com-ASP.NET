@page
@model AutoEscola.Pages.Alunos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h2>Cadastro de Alunos</h2>

    <p>
        <a asp-page="Create">Novo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Aluno[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aluno[0].Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aluno[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aluno[0].DataNascimento)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Aluno)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Detalhes</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>